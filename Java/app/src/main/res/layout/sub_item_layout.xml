<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/sub_item_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_gravity="center"
        android:contentDescription="@string/sub_item_icon_desc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sub_item_title_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/sub_item_title"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/sub_item_subtitle_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="@string/sub_item_subtitle"
            android:textColor="@color/colorGray"
            style="@style/TextAppearance.AppCompat.Subhead"/>

    </LinearLayout>

</LinearLayout>